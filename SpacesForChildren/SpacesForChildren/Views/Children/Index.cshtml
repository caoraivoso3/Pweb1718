@model IEnumerable<SpacesForChildren.Models.Child>
@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole("Pai")) {
    <h2>As minhas crianças</h2>

    <p>
        @Html.ActionLink("Adicionar filho", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
else if (User.IsInRole("Instituição") || User.IsInRole("Administrador")) {

    if (User.IsInRole("Instituição")) {
        <h2>Crianças na Instituição</h2>
    }
    else {
        <h2>Crianças</h2>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Nome do Pai")
            </th>
            <th>
                @Html.DisplayName("Filho")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new {id = item.Id})
                    @if (User.IsInRole("Administrador")) 
                    {
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
        }
    </table>
}
